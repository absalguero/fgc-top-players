{% extends "layout.njk" %}

{# --- Page Variables --- #}
{% set pageTitle = "Contact FGC Top Players | Get in Touch" %}
{% set pageDesc = "Contact FGC Top Players with questions, missing results, player corrections, bug reports, ideas, or support inquiries." %}
{# Setting image here allows layout.njk to pick it up automatically #}
{% set image = '/images/og-default.png' %}

{# --- Block Overrides --- #}

{% block title %}{{ pageTitle }}{% endblock %}

{% block meta_description %}
<meta name="description" content="{{ pageDesc }}" />
{% endblock %}

{% block og_title %}{{ pageTitle }}{% endblock %}
{% block og_description %}{{ pageDesc }}{% endblock %}

{% block twitter_title %}{{ pageTitle }}{% endblock %}
{% block twitter_description %}{{ pageDesc }}{% endblock %}

{% block head %}
{# NOTE: Canonical & Social Tags removed (Layout handles them automatically) #}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact FGC Top Players",
  "url": "{{ site.url }}{{ page.url }}",
  "description": "Contact page for reporting results, corrections, or bugs.",
  "mainEntity": {
    "@type": "Organization",
    "name": "FGC Top Players",
    "url": "{{ site.url }}",
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "contact@fgctopplayers.com",
      "contactType": "customer support"
    }
  }
}
</script>
{% endblock %}

{% block content %}

  {% include "banner.njk" %}

  <h1>Contact FGC Top Players</h1>

  <p class="intro-text intro-text--spacious">
    One inbox for everything. Email us with results, corrections, bugs, ideas, or support questions.
  </p>

  <p class="btn-row" style="text-align:center;">
    <a href="mailto:contact@fgctopplayers.com?subject=FGCTP%20Contact" class="btn btn--primary">
      <i class="fa-solid fa-envelope"></i>
      Email FGC Top Players
    </a>
  </p>

{% endblock %}