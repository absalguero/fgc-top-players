---
title: FGC Top Players
bodyClass: "page-home"
pagination:
  data: collections.news
  size: 6
  alias: articles
  reverse: true
  addAllPagesToCollections: true
permalink: "{% if pagination.pageNumber == 0 %}/{% else %}/page/{{ pagination.pageNumber + 1 }}/{% endif %}"
eleventyNavigation:
  key: Home
  order: 1
  iconClass: "fas fa-home"
navHighlight: "Home"
---

{% extends "layout.njk" %}

{# --- Calculate Dynamic Metadata Variables --- #}
{% set pageTitle %}
  {% if pagination.pageNumber == 0 %}
    {# SEO OPTIMIZED TITLE #}
    FGC Top Players — Latest News, Rankings & Stats
  {% else %}
    {# ARCHIVE TITLE (Prevents SEO Duplicate Title Errors) #}
    FGC News Archive (Page {{ pagination.pageNumber + 1 }}) | FGC Top Players
  {% endif %}
{% endset %}

{% set pageDesc %}
  {% if pagination.pageNumber == 0 %}
    Latest FGC news, tournament results, and rankings across Street Fighter and more—updated regularly.
  {% else %}
    FGC news index page {{ pagination.pageNumber + 1 }}. Catch up on recent tournaments, results, and analysis.
  {% endif %}
{% endset %}

{# --- Block Overrides --- #}

{% block title %}{{ pageTitle | trim }}{% endblock %}

{% block meta_description %}
<meta name="description" content="{{ pageDesc | trim }}">
{% endblock %}

{% block og_title %}{{ pageTitle | trim }}{% endblock %}
{% block og_description %}{{ pageDesc | trim }}{% endblock %}

{% block twitter_title %}{{ pageTitle | trim }}{% endblock %}
{% block twitter_description %}{{ pageDesc | trim }}{% endblock %}

{# --- Extra Head Tags --- #}
{% block head_extra %}
  {% if pagination.href.previous %}
    <link rel="prev" href="{{ pagination.href.previous }}">
  {% endif %}
  {% if pagination.href.next %}
    <link rel="next" href="{{ pagination.href.next }}">
  {% endif %}
  <link rel="alternate" type="application/rss+xml" title="FGC Top Players — News Feed" href="/feed.xml">
{% endblock %}

{# --- Page-level JSON-LD --- #}
{% block structured_data %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "{{ pageTitle | trim }}",
  "url": "{{ site.url }}{{ page.url }}",
  "description": "Latest FGC news, tournament results, and rankings across Street Fighter and more."
}
</script>
{% endblock %}

{% block content %}
<div class="content-container">
  {% include "banner.njk" %}

  {# --- LOGIC: Are we on Page 1 (Dashboard) or Page 2+ (Archive)? --- #}
  {% set isHomePage = (pagination.pageNumber == 0) %}

  {# --- H1 LOGIC --- #}
  {% if isHomePage %}
    {# Hidden H1 for SEO/Accessiblity only (Preserves Dashboard Layout) #}
    <h1 class="sr-only">FGC Top Players — Street Fighter 6 Rankings & Tournament Results</h1>
  {% else %}
    {# Visible H1 for Archive Pages #}
    <h1 class="page-title">
      Latest FGC News (Page {{ pagination.pageNumber + 1 }})
    </h1>
  {% endif %}

  <div class="dashboard-grid {% if isHomePage %}dashboard-grid--home{% else %}dashboard-grid--archive{% endif %}">
    
    {# === COLUMN 1: TOP 10 PLAYERS (Only on Home) === #}
    {% if isHomePage %}
      <aside class="dash-sidebar dash-sidebar--left" aria-label="Top Ranked Players">
        <header class="widget-header">
          <h3 class="widget-title">Top 10 SF6 Players</h3>
        </header>
        
        <div class="mini-rank-list">
          {% set count = 0 %}
          {% for p in playerStatsSlim | sort(false, false, 'rank') %}
            {% if p.rank and count < 10 %}
              {% set count = count + 1 %}
              
              {% set rankClass = "" %}
              {% if p.rank == 1 %}{% set rankClass = "rank-1" %}
              {% elseif p.rank == 2 %}{% set rankClass = "rank-2" %}
              {% elseif p.rank == 3 %}{% set rankClass = "rank-3" %}
              {% elseif p.rank == 4 %}{% set rankClass = "rank-4" %}
              {% elseif p.rank == 5 %}{% set rankClass = "rank-5" %}
              {% else %}{% set rankClass = "rank-6-10" %}
              {% endif %}

              <div class="mini-rank-item {{ rankClass }}">
                <div class="mini-rank-circle">{{ p.rank }}</div>
                <div class="mini-rank-details">
                  <a href="/players/{{ p.slug }}/" class="rank-name">{{ p.name }}</a>
                  {% if p.country %}
                    <span class="rank-country">
                      {# FIX: Use direct filename match #}
                      <img src="/images/flags/{{ p.country | lower }}.png" alt="{{ p.country }}" class="country-flag">
                    </span>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <div class="widget-footer-wrapper">
          <a href="/street-fighter-6-rankings/" class="btn btn--primary btn--small">View Full Rankings</a>
        </div>
      </aside>
    {% endif %}

    {# === COLUMN 2: NEWS FEED (Always visible) === #}
    <main class="dash-feed">
      {% if isHomePage %}
        <h2 class="section-label">Latest FGC News</h2>
      {% endif %}

      <div class="home-news-list {% if isHomePage %}dashboard-feed-list{% endif %}">
        {% for article in pagination.items %}
          {% include "partials/_home_card.njk" %}
        {% endfor %}
      </div>
    </main>

    {# === COLUMN 3: LATEST RESULTS (Only on Home) === #}
    {% if isHomePage %}
      <aside class="dash-sidebar dash-sidebar--right" aria-label="Recent Tournament Results">
        <header class="widget-header">
          <h3 class="widget-title">Latest Tournament Results</h3>
        </header>

        <div class="mini-event-list">
          {% set count = 0 %}
          {% set _allEvents = tournaments.events | default([]) | sort(attribute='date') | reverse %}
          
          {% for evt in _allEvents %}
            {% if count < 3 %}
              {% set count = count + 1 %}
              
              {% set tier = (evt.Tier | default('')) | trim | upper %}
              {% set tier_mod = '' %}
              {% if tier == 'S+' %}{% set tier_mod = 'mini-card--s-plus' %}
              {% elseif tier == 'S' %}{% set tier_mod = 'mini-card--s' %}
              {% elseif tier == 'A' %}{% set tier_mod = 'mini-card--a' %}
              {% elseif tier == 'B' %}{% set tier_mod = 'mini-card--b' %}
              {% endif %}

              {# --- FIX: Manual Date Parsing (Reliable) --- #}
              {% set dateDisplay = evt.date %}
              {% if evt.date %}
                {% set parts = evt.date | string | split('-') %}
                {% if parts | length == 3 %}
                  {% set monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"] %}
                  {# Subtract 1 from month part to get array index #}
                  {% set mIndex = (parts[1] | int) - 1 %}
                  {% set dateDisplay = monthNames[mIndex] ~ " " ~ (parts[2] | int) ~ ", " ~ parts[0] %}
                {% endif %}
              {% endif %}

              <article class="mini-event-card {{ tier_mod }}" onclick="window.location.href='/tournaments/{{ evt.slug }}/';">
                
                <header class="mini-card__head">
                  <h4 class="mini-card__title">{{ evt.name }}</h4>
                  <time class="mini-card__date">{{ dateDisplay }}</time>
                </header>

                <div class="mini-card__meta">
                  {% if evt.Entrants %}
                    <span class="mini-chip"><i class="fas fa-users"></i> {{ evt.Entrants }}</span>
                  {% endif %}
                  {% if tier in ['S+','S','A','B'] %}
                    <span class="mini-chip mini-chip--rated">Rated</span>
                  {% endif %}
                </div>

                {% if evt.results %}
                  <div class="mini-podium">
                    {% for r in evt.results %}
                      {% if r.Finish == 1 or r.Finish == 2 or r.Finish == 3 %}
                        <div class="mini-podium-row place-{{ r.Finish }}">
                          <span class="p-place">
                             <i class="fas fa-trophy"></i>
                          </span>
                          <span class="p-name">{{ r.Player }}</span>
                        </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </article>
            {% endif %}
          {% endfor %}
        </div>

        <div class="widget-footer-wrapper">
          <a href="/tournament-results/" class="btn btn--primary btn--small">View Results Archive</a>
        </div>
      </aside>
    {% endif %}

  </div>

  {# --- Pagination Controls --- #}
  <nav class="pagination-nav" aria-label="Pagination" style="margin-top: 1rem; width: 100%;">
    {% if pagination.href.previous %}
      <a href="{{ pagination.href.previous }}" class="pagination-nav__link" rel="prev">&larr; Previous Page</a>
    {% else %}
      <span class="pagination-nav__link--disabled">&larr; Previous Page</span>
    {% endif %}

    {% for pageEntry in pagination.pages %}
      {% set pageUrl = pagination.hrefs[loop.index0] %}
      <a href="{{ pageUrl }}" class="pagination-nav__link {% if pageUrl == page.url %}pagination-nav__link--active{% endif %}" aria-label="Go to page {{ loop.index }}">
        {{ loop.index }}
      </a>
    {% endfor %}

    {% if pagination.href.next %}
      <a href="{{ pagination.href.next }}" class="pagination-nav__link" rel="next">Next Page &rarr;</a>
    {% else %}
      <span class="pagination-nav__link--disabled">Next Page &rarr;</span>
    {% endif %}
  </nav>

</div>

<script>
  (function() {
    const currentPageUrl = window.location.pathname;
    document.querySelectorAll('.home-news-list a[href^="/news/"]').forEach(link => {
      link.addEventListener('click', function() {
        sessionStorage.setItem('newsListingPage', currentPageUrl);
      });
    });
  })();
</script>
{% endblock %}