{% extends "layout.njk" %}

{# --- Page Variables --- #}
{% set pageTitle = "Compare Top Street Fighter 6 Pro Players | FGC Top Players" %}
{% set pageDesc = "Build side-by-side matchups for top SF6 pros. See FGPI, ranks, recent results, and momentum. Save and share up to 5-player comparisons." %}
{% set image = '/images/social/player-comparison-card.png' %}

{# --- Block Overrides --- #}

{% block title %}{{ pageTitle }}{% endblock %}

{% block meta_description %}
<meta name="description" content="{{ pageDesc }}">
{% endblock %}

{% block og_title %}{{ pageTitle }}{% endblock %}
{% block og_description %}{{ pageDesc }}{% endblock %}

{% block twitter_title %}{{ pageTitle }}{% endblock %}
{% block twitter_description %}{{ pageDesc }}{% endblock %}

{% block head %}
{# NOTE: Canonical & Social Tags removed (Layout handles them automatically) #}

{# Performance optimization: Preload the social card image #}
<link rel="preload" as="image" href="{{ site.url }}{{ image }}">
{% endblock %}

{% block structured_data %}
{# ——— Breadcrumbs ——— #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type":"ListItem","position":1,"name":"Analysis","item":"{{ site.url }}/analysis/" },
    { "@type":"ListItem","position":2,"name":"Player Comparison","item":"{{ site.url }}{{ page.url | url }}" }
  ]
}
</script>

{# ——— FAQ (adds rich results + non-thin content) ——— #}
<script type="application/ld+json">
{
  "@context":"https://schema.org",
  "@type":"FAQPage",
  "mainEntity":[
    {
      "@type":"Question",
      "name":"What stats are included in the player comparison?",
      "acceptedAnswer":{"@type":"Answer","text":"FGPI score, official ranks, recent tournament results, momentum, and more. You can add up to 5 players and save or share a comparison."}
    },
    {
      "@type":"Question",
      "name":"How are rankings calculated?",
      "acceptedAnswer":{"@type":"Answer","text":"Rankings use our multi-metric model (FGPI) that blends recent performance, event weighting, and consistency. See the Analytics Glossary for details."}
    },
    {
      "@type":"Question",
      "name":"Can I share a comparison?",
      "acceptedAnswer":{"@type":"Answer","text":"Yes. Use the Share button to copy a link or ready-to-post text for social media."}
    }
  ]
}
</script>
{% endblock %}

{% block content %}

<div class="content-container content-container--wide">
  {% include "banner.njk" %}

  <h1 class="page-title">Compare Top Street Fighter 6 Pro Players</h1>

  <p class="intro-text">
    Compare top <strong>Street Fighter 6 pro players</strong> side-by-side using
    <a href="/analytics-glossary/#fgpi">FGPI</a>, official ranks, and recent results.
    New to our metrics? See the the full <a href="/analytics-glossary/">Analytics Glossary</a>. Add up to 5 players, save the matchup, and share a link.
  </p>

  <div class="comparison-sticky-wrapper" data-component="comparison-bar">
    <div id="persistent-comparison-bar">
      <div class="persistent-bar__players" id="persistent-bar-players"></div>

      <div class="persistent-bar__controls">
        <div class="add-player-wrapper search-wrapper">
          <input
            type="text"
            id="add-player-search"
            class="search-form__input"
            placeholder="Add a Player..."
            autocomplete="off"
            inputmode="search"
            aria-label="Add a player to compare"
          >
          <button type="button" class="search-clear-btn" id="add-player-search-clear-btn" aria-label="Clear search">
            <i class="fas fa-times" aria-hidden="true"></i>
          </button>
          {# MOVED: Autocomplete results now inside the wrapper #}
          <div id="autocomplete-results" class="autocomplete-results" role="listbox" aria-label="Player suggestions"></div>
        </div>
        <button id="reset-comparison-btn" class="btn btn--primary" style="display: none;" aria-live="polite">
          <i class="fas fa-sync-alt" aria-hidden="true"></i> Reset Comparison
        </button>
        <div id="player-limit-message" class="player-limit-message" style="display: none;">
          Maximum of 5 players reached.
        </div>
      </div>
    </div>
  </div>

  <div class="comparison-actions">
    <button id="save-comparison-btn" class="btn btn--primary"><i class="fas fa-save" aria-hidden="true"></i> Save Comparison</button>
    <button id="share-comparison-btn" class="btn btn--primary"><i class="fas fa-share-alt" aria-hidden="true"></i> Share Comparison</button>
  </div>

  <div id="comparison-container">
    <div id="comparison-placeholder">
      <div id="comparison-presets">
        <h2 class="presets-title">Start a New Comparison</h2>
        <p>Select a preset or use the search bar above to add players manually.</p>
        <div class="preset-buttons">
          <button id="preset-top-5" class="btn btn--primary"><i class="fas fa-trophy" aria-hidden="true"></i> Load Top 5 by Rank</button>
          <button id="preset-top-5-fgpi" class="btn btn--primary"><i class="fas fa-chart-line" aria-hidden="true"></i> Load Top 5 by FGPI</button>
          <button id="preset-random-5" class="btn btn--primary"><i class="fas fa-random" aria-hidden="true"></i> Load 5 Random Players</button>
        </div>

        {# Dynamic popular comparisons (filled by JS) #}
        <div class="popular-comparisons" aria-labelledby="popular-comparisons-heading">
          <h2 id="popular-comparisons-heading" class="h4">Popular comparisons</h2>
          <ul id="popular-comparisons-list" class="link-list"></ul>
          <p id="popular-comparisons-empty" class="muted" style="display:none;">No suggestions available yet.</p>
        </div>
      </div>
    </div>
  </div>

  <div id="saved-comparisons-container">
    <h3>Saved Comparisons</h3>
    <ul id="saved-comparisons-list"></ul>
  </div>
</div>

{# --- Modals for Save and Share --- #}
<div id="modal-overlay" class="modal-overlay" style="display: none;"></div>

<div id="save-modal" class="modal" style="display: none;" role="dialog" aria-modal="true" aria-labelledby="save-modal-title">
  <div class="modal-content">
    <button class="close-btn" id="close-save-modal" aria-label="Close save modal">&times;</button>
    <h3 id="save-modal-title">Save Comparison</h3>
    <p>Give your comparison a name to easily find it later.</p>
    <input type="text" id="save-comparison-name-input" placeholder="e.g., My GOATs" aria-label="Comparison name">
    <button id="confirm-save-btn" class="btn btn--primary">Save</button>
  </div>
</div>

<div id="share-modal" class="modal" style="display: none;" role="dialog" aria-modal="true" aria-labelledby="share-modal-title">
  <div class="modal-content">
    <button class="close-btn" id="close-share-modal" aria-label="Close share modal">&times;</button>
    <h3 id="share-modal-title">Share Comparison</h3>
    <p>Copy the link or pre-formatted text for social media.</p>
    <div class="share-options">
      <textarea id="social-media-text" readonly rows="4" aria-label="Pre-formatted social text"></textarea>
      <button id="copy-social-text-btn" class="btn btn--primary"><i class="fas fa-copy" aria-hidden="true"></i> Copy Text for Social Media</button>
      <button id="copy-link-btn" class="btn btn--primary"><i class="fas fa-link" aria-hidden="true"></i> Copy Link Only</button>
    </div>
  </div>
</div>

<div id="tooltip" class="tooltip" role="tooltip" aria-hidden="true"></div>

<script src="/js/popularityTracker.js" defer></script>
<script src="/js/playerComparison.js" defer></script>

{% endblock %}