{% endblock %}

{% block head %}
<link rel="canonical" href="{{ page.url | url | absoluteUrl(site.url) }}">

<meta property="og:type" content="website">
<meta property="og:site_name" content="FGC Top Players">
<meta property="og:title" content="Support FGC Top Players">
<meta property="og:description" content="Support the project on Fourthwall. Your contributions fund hosting, data tools, and development.">
<meta property="og:url" content="{{ page.url | url | absoluteUrl(site.url) }}">
<meta property="og:image" content="{{ '/images/og-default.png' | url | absoluteUrl(site.url) }}">

<meta name="twitter:card" content="summary_large_image">
