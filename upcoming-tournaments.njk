{% extends "layout.njk" %}

{% block title %}Upcoming Rated Tournaments | FGC Top Players{% endblock %}

{% block meta_description %}
<meta name="description" content="The official list of upcoming rated FGC tournaments for Street Fighter, Tekken, and more. Find event dates, locations, and prize pools to plan your competitive journey.">
{% endblock %}

{# Self-referential canonical #}
{% block canonical %}
<link rel="canonical" href="{{ site.url }}/upcoming-tournaments/">
{% endblock %}

{# Social cards (fallback if layout doesn't already set) #}
{% block social_meta %}
<meta property="og:type" content="website">
<meta property="og:title" content="Upcoming Rated Tournaments | FGC Top Players">
<meta property="og:description" content="The official list of upcoming rated FGC tournaments for Street Fighter, Tekken, and more.">
<meta property="og:url" content="{{ site.url }}/upcoming-tournaments/">
<meta property="og:image" content="{{ site.url }}/images/og/upcoming-tournaments.png">
<meta name="twitter:card" content="summary_large_image">
{% endblock %}

{# Optional alternate feeds for UX/links (provide these routes if you have them) #}
{% block head_extra %}
<link rel="alternate" type="application/json" href="{{ site.url }}/upcoming-tournaments.json">
<link rel="alternate" type="text/calendar" href="{{ site.url }}/upcoming-tournaments.ics">
{% endblock %}

{% block content %}

  {% include "banner.njk" %}

  <h1>Upcoming Rated Tournaments</h1>
  <p class="intro-text">Upcoming rated FGC events: dates, venues, prize info, and key links in one place.</p>

  <div class="filter-sticky-container sticky-controls">
    <button class="filter-toggle-btn" id="filter-toggle-btn-upcoming" type="button" aria-expanded="false">
      <span>Search & Sort</span>
      <i class="fas fa-chevron-down toggle-icon"></i>
    </button>

    <div class="controls-container" id="upcoming-controls">
      <div class="search-wrapper">
        <label for="search-input" class="sr-only">Search Tournaments</label>
        <button type="button" class="search-submit-btn" id="upcoming-search-submit-btn" aria-label="Search">
          <i class="fas fa-search"></i>
        </button>
        <input
          type="text"
          id="search-input"
          class="search-form__input"
          placeholder="Search Tournaments..."
          autocomplete="off"
        >
        <button class="search-clear-btn" id="search-clear-btn" aria-label="Clear search">
          <i class="fas fa-times"></i>
        </button>
      </div>

      <div class="upcoming-tourney-controls__group">
        <label for="sort-by" class="sr-only">Sort by</label>
        <select id="sort-by" class="sort-select">
          <option value="date-asc">Sort by Date (Soonest First)</option>
          <option value="rating-desc">Sort by Tier (High to Low)</option>
          <option value="rating-asc">Sort by Tier (Low to High)</option>
          <option value="prize-desc">Sort by Prize Pool (High to Low)</option>
          <option value="name-asc">Sort by Name (A-Z)</option>
        </select>
      </div>
    </div>
  </div>

  <div id="results-count" class="results-count"></div>

  {# Source data for list and JSON-LD #}
  {% set ratedTournaments = allUpcomingTournaments | values | rejectattr("isArchived", "truthy") | selectattr('tier', 'defined') | list %}

  <div id="tournaments-list" class="upcoming-tourney-list">
    {% if ratedTournaments and ratedTournaments | length %}
      {% for tournament in ratedTournaments %}
        {% include "partials/_upcoming-card.njk" %}
      {% endfor %}
    {% else %}
      <p>No rated tournament data found.</p>
    {% endif %}
  </div>

  <div id="no-results-message" class="no-results-message">
    <h2>No Tournaments Found</h2>
    <p>Try adjusting your search or filter criteria.</p>
    <button id="clear-filters-btn" class="btn btn--primary">Clear All Filters</button>
  </div>

  <div class="sentinel"></div>

  <script src="/js/upcomingRatedTournaments.js" defer></script>

  {# Richer ItemList + Event schema with absolute URLs and ISO dates #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Upcoming Rated Tournaments",
    "itemListOrder": "Ascending",
    "numberOfItems": {{ ratedTournaments | length }},
    "itemListElement": [
      {% for tournament in ratedTournaments %}
      {
        "@type": "ListItem",
        "position": {{ loop.index }},
        "url": "{{ site.url }}/upcoming-tournaments/{{ tournament.slug }}/",
        "item": {
          "@type": "Event",
          "@id": "{{ site.url }}/upcoming-tournaments/{{ tournament.slug }}/#event",
          "name": "{{ tournament.name }}",
          "url": "{{ site.url }}/upcoming-tournaments/{{ tournament.slug }}/",
          "image": [
            {% if tournament.image %}
              "{{ tournament.image | safe }}"
            {% else %}
              "{{ site.url }}/images/events/{{ tournament.slug }}.png"
            {% endif %}
          ],
          "description": "Rated {{ tournament.game }} tournament{% if tournament.tier %} Â· Tier {{ tournament.tier }}{% endif %}.",
          "eventStatus": "https://schema.org/EventScheduled",
          "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
          "startDate": "{{ tournament.startDate }}"{% if tournament.endDate %},
          "endDate": "{{ tournament.endDate }}"{% endif %},
          "location": {
            "@type": "Place",
            "name": "{{ tournament.venueName or tournament.location or 'Venue' }}",
            "address": {
              "@type": "PostalAddress",
              "streetAddress": "{{ tournament.addressStreet or '' }}",
              "addressLocality": "{{ tournament.city or '' }}",
              "addressRegion": "{{ tournament.region or '' }}",
              "postalCode": "{{ tournament.postalCode or '' }}",
              "addressCountry": "{{ tournament.country or '' }}"
            }
          }
          {% if tournament.registrationUrl %},
          "offers": {
            "@type": "Offer",
            "url": "{{ tournament.registrationUrl }}",
            "price": "{{ tournament.price or '0' }}",
            "priceCurrency": "{{ tournament.currency or 'USD' }}",
            "availability": "https://schema.org/{% if tournament.isSoldOut %}SoldOut{% else %}InStock{% endif %}"
          }
          {% endif %},
          "organizer": {
            "@type": "Organization",
            "name": "{{ tournament.orgName or 'FGC Top Players' }}",
            "url": "{{ tournament.orgUrl or site.url }}"
          }
          {% if tournament.registerActionUrl %},
          "potentialAction": {
            "@type": "RegisterAction",
            "target": "{{ tournament.registerActionUrl }}"
          }
          {% endif %}
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
  </script>

  {# Breadcrumbs for sitelinks/context #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Tournaments", "item": "{{ site.url }}/tournaments/" },
      { "@type": "ListItem", "position": 2, "name": "Upcoming Rated Tournaments", "item": "{{ site.url }}/upcoming-tournaments/" }
    ]
  }
  </script>

{% endblock %}
