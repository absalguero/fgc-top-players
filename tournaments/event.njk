---
pagination:
  data: tournaments.events
  size: 1
  alias: tournamentData
permalink: "/tournaments/{{ tournamentData.slug }}/"
---
{% extends "layout.njk" %}
{% set bodyClass = "page-event" %}

{% block title %}{{ tournamentData.name }} Results | FGC Top Players{% endblock %}

{% block meta_description %}
<meta name="description" content="View the full tournament results for {{ tournamentData.name }}, held on {{ tournamentData.date | readableDate }}. See all player placings and entrants." />
{% endblock %}

{% block content %}
<div class="event-header-group">
    <div class="back-button-container">
        <a href="/tournament-results/" class="btn btn--primary">
            <i class="fas fa-arrow-left"></i> Back to Tournament Results
        </a>
    </div>
    <div class="header-sticky-container">
        <div class="event-header">
            <div class="event-image-container">
                <img
                    src="/images/events/{{ tournamentData.slug }}.png"
                    alt="{{ tournamentData.name }}"
                    class="event-header__image"
                    onerror="this.style.display='none';"
                >
            </div>
            <div class="event-header__details">
                <h1>{{ tournamentData.name }}</h1>
                <div class="event-header__meta">
                    <span><i class="fas fa-calendar-alt"></i> {{ tournamentData.date | readableDate }}</span>
                    <span><i class="fas fa-users"></i> {{ tournamentData.results[0].Entrants }} Entrants</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="results-container">
    {% if tournamentData.results and tournamentData.results.length > 0 %}
        <div class="results-grid" id="results-grid">
            {% for result in tournamentData.results | sortByFinish %}
                {% set player_data = rankings.players | find("Player", result.Player) %}
                {% set rank = player_data.Rank | int if player_data else 0 %}
                {% set finish = result.Finish | int %}

                {% set card_class = "" %}
                {% if rank >= 1 and rank <= 4 %}
                    {% set card_class = "rank-" + rank %}
                {% elseif rank >= 5 and rank <= 40 %}
                    {% set card_class = "ranked-6-40" %}
                {% endif %}

                {% set show_photo = player_data and rank > 0 and rank <= 40 and player_data['Player Icon'] %}

                <div class="result-card {{ card_class }} {% if finish >= 1 and finish <= 4 %}finish-style-{{ finish }}{% endif %}">
                    <div class="result-card__finish">
                        {%- set finish_num = result.Finish | int -%}
                        {%- if finish_num >= 11 and finish_num <= 13 -%}
                            {{ finish_num }}th
                        {%- else -%}
                            {%- set last_digit = finish_num % 10 -%}
                            {%- if last_digit == 1 -%}
                                {{ finish_num }}st
                            {%- elif last_digit == 2 -%}
                                {{ finish_num }}nd
                            {%- elif last_digit == 3 -%}
                                {{ finish_num }}rd
                            {%- else -%}
                                {{ finish_num }}th
                            {%- endif -%}
                        {%- endif -%}
                    </div>
                    <div class="result-card__player">
                        {% if show_photo %}
                            <img src="{{ player_data['Player Icon'] }}" alt="{{ result.Player }}" class="player-icon" onerror="this.style.display='none'">
                        {% else %}
                            <div class="player-placeholder-icon"><i class="fas fa-user"></i></div>
                        {% endif %}
                        <div class="result-card__player-info">
                            <div class="player-info__text-container">
                                <span>{{ result.Player }}</span>
                                {% if rank > 0 and rank <= 40 %}
                                    <span class="rank-badge {% if rank <= 4 %}rank-badge--top5{% endif %}">
                                        #{{ rank }}
                                    </span>
                                {% endif %}
                            </div>
                            {% if finish == 1 %}
                                <span class="trophy-badge-icon"><i class="fas fa-trophy trophy-1"></i></span>
                            {% elseif finish == 2 %}
                                <span class="trophy-badge-icon"><i class="fas fa-trophy trophy-2"></i></span>
                            {% elseif finish == 3 %}
                                <span class="trophy-badge-icon"><i class="fas fa-trophy trophy-3"></i></span>
                            {% elseif finish == 4 %}
                                <span class="medal-badge-icon"><i class="fas fa-medal medal-4"></i></span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        {# --- CORRECTED: Replaced button with sentinel for infinite scroll --- #}
        {% if tournamentData.results.length > 16 %}
            <div id="sentinel" style="height: 1px;"></div>
        {% endif %}

    {% else %}
        <p style="text-align: center; margin-top: 2rem;">No results are currently available for this event.</p>
    {% endif %}
</div>
{% endblock %}