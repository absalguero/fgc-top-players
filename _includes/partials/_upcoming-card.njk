<div class="simple-card simple-card--{{ tournament.tier | lower | replace('+', '-plus') }}"
     data-search-text="{{ tournament.name }} {{ tournament.dates }} {{ tournament.location }} {{ tournament.prizes }} {{ tournament.game }}"
     data-name="{{ tournament.name }}"
     data-start-date="{{ tournament.startDate }}"
     data-prizes="{{ tournament.prizes }}"
     data-tier="{{ tournament.tier | trim | upper }}">

  <a href="/upcoming-tournaments/{{ tournament.slug }}/" class="simple-card__click-wrapper">
    <div class="simple-card__main">
      <h3 class="simple-card__name">
        <span>{{ tournament.name }}</span>
      </h3>
      <div class="simple-card__meta-grid">
        <div class="simple-card__meta-item">
          <i class="fas fa-calendar-alt"></i>
          <span>{{ tournament.dates }}</span>
        </div>
        <div class="simple-card__meta-item">
          <i class="fas fa-map-marker-alt"></i>
          <span>{{ tournament.location }}</span>
        </div>
        <div class="simple-card__meta-item">
          <i class="fas fa-gamepad"></i>
          <span>{{ tournament.game }}</span>
        </div>
        <div class="simple-card__meta-item">
          <i class="fas fa-trophy"></i>
          <span>{{ tournament.prizes }}</span>
        </div>
      </div>
    </div>

    <div class="simple-card__actions">
      <i class="fas fa-chevron-right simple-card__chevron"></i>
    </div>
  </a>
</div>
