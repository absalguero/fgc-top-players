        "@type": "Organization",
        "name": "FGC Top Players",
        "url": "{{ site.url }}"
      }
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Analysis",
          "item": "{{ '/analysis/' | url | absoluteUrl(site.url) }}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Character Comparison",
          "item": "{{ page.url | url | absoluteUrl(site.url) }}"
        }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How many characters can I compare?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can compare up to 5 Street Fighter 6 characters side-by-side."
          }
        },
        {
          "@type": "Question",
